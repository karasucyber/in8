{
  "compilerOptions": {
    "target": "esnext", // Alvo de compilação ESNext para utilizar as últimas funcionalidades do ECMAScript
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], // Bibliotecas disponíveis durante a compilação
    "allowJs": true, // Permite a inclusão de arquivos JavaScript no projeto
    "skipLibCheck": true, // Pula a verificação de bibliotecas de definição de tipo
    "strict": true, // Habilita todas as opções de verificação estrita
    "esModuleInterop": true, // Habilita a interoperabilidade com módulos ES6
    "module": "esnext", // Tipo de módulo para compilação
    "moduleResolution": "node", // Resolução de módulos para Node.js
    "resolveJsonModule": true, // Permite importar módulos JSON
    "isolatedModules": true, // Garante que cada arquivo seja tratado como um módulo isolado
    "jsx": "preserve", // Mantém o JSX intacto para que o Babel possa lidar com ele
    "incremental": true, // Habilita a compilação incremental para projetos
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ], // Arquivos para inclusão na compilação
  "exclude": [
    "node_modules"
  ] // Pastas ou arquivos a serem excluídos da compilação
}
